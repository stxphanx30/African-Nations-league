<!-- Optional: small script to duplicate ticker contents (so animation loops smoothly) -->
<script>
    // Duplicate ticker children so the animation scrolls continuously without sudden jump.
    (function() {
        const ticker = document.getElementById('tickerInner');
        if (!ticker) return;
        const children = Array.from(ticker.children);
        children.forEach(node => {
            const clone = node.cloneNode(true);
            ticker.appendChild(clone);
        });
    })();
</script>