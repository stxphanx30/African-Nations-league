<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - African_Nations_league</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/African_Nations_league.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/svg" href="~/images/Confederation_of_African_Football_logo (1).svg" />

</head>
<body>
    <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-navbar border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a asp-controller="Loading" asp-action="Loading2" class="navbar-brand" style="color: white;">
                <img src="~/images/Confederation_of_African_Football_logo (1).svg" alt="African Nations League" width="60" height="60" />
                African Nations league
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <!-- align right -->
                <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home"
                                   && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Loading" asp-action="Loading2">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Teams"
                                   && ViewContext.RouteData.Values["action"].ToString() == "Teams" ? "active" : "")"
                               asp-area="" asp-controller="Teams" asp-action="Teams">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Teams"
                                                                                                 && ViewContext.RouteData.Values["action"].ToString() == "Leaderboard" ? "active" : "")"
                               asp-area="" asp-controller="Teams" asp-action="Leaderboard">Top Scorers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Teams"
                                                                                                 && ViewContext.RouteData.Values["action"].ToString() == "Bracket" ? "active" : "")"
                               asp-area="" asp-controller="Teams" asp-action="Bracket">Bracket</a>
                        </li>
                </ul>
            </div>
        </div>
    </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer custom-footer text-white pt-5 pb-3">
        <div class="container">
            <div class="row">

                <!-- About / Company -->
                <div class="col-md-3 mb-3">
                    <h5>African Nations League</h5>
                    <ul class="list-unstyled">
                        <li><a href="https://www.cafonline.com/media/" class="footer-link">Media</a></li>
                        <li><a href="https://www.cafonline.com/press-release/" class="footer-link">Press Release</a></li>
                    </ul>
                    <a asp-controller="Loading" asp-action="Loading2" class="navbar-brand" style="color: white;">
                        <img src="~/images/Confederation_of_African_Football_logo (1).svg" alt="African Nations League" width="90" height="90" />
                    </a>
                </div>

                <!-- Competitions / News -->
                <div class="col-md-3 mb-3">
                    <h5>Competitions</h5>
                    <ul class="list-unstyled">
                        <li><a href="https://www.cafonline.com/inside-caf/member-associations/" class="footer-link">Member Associations</a></li>
                        <li><a href="https://www.cafonline.com/en/news/" class="footer-link">News Center</a></li>
                        <li><a href="https://www.cafonline.com/videos/" class="footer-link">Videos</a></li>
                    </ul>
                </div>

                <!-- About CAF -->
                <div class="col-md-3 mb-3">
                    <h5>About Us</h5>
                    <ul class="list-unstyled">
                        <li><a href="https://www.cafonline.com/inside-caf/about-us/caf-history/" class="footer-link">CAF History</a></li>
                        <li><a href="https://www.cafonline.com/inside-caf/about-us/caf-president/" class="footer-link">CAF President</a></li>
                        <li><a href="https://www.cafonline.com/en/inside-caf/about-us/organization/executive-committee/" class="footer-link">Organization</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-3 mb-3">
                    <h5>Connect with us</h5>

                    <div class="mb-2">
                        <strong>Address:</strong>
                        <div>3 Abdel Khalek Tharwat Street, El Hay El Motamayez, P.O. Box 23, 6th October City, Egypt</div>
                    </div>

                    <div class="mb-2">
                        <strong>Telephone:</strong>
                        <div>+202 382 472 72</div>
                    </div>

                    <div class="mb-2">
                        <strong>Email:</strong>
                        <div><a href="mailto:info@cafonline.com" class="footer-link">info@cafonline.com</a></div>
                    </div>

                    <div class="mb-2">
                        <a href="#" class="footer-link">Privacy Policy</a>
                    </div>
                    <div class="mb-2">
                        <a href="#" class="footer-link">Cookie Policy</a>
                    </div>
                    <div class="mb-2">
                        <a href="#" class="footer-link">Terms of Service</a>
                    </div>

                </div>

            </div>

            <hr class="bg-light" />

            <div class="text-center small">
                &copy; 2025 - African Nations League. All rights reserved.
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
