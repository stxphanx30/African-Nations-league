@model RepresentativeDashboardViewModel
@{
    ViewData["Title"] = "Representative Dashboard";
    Layout = null; // requested standalone

    // keep exactly your original helpers / field names
    string displayTeamName = Model.User?.TeamName ?? Model.Team?.TeamName ?? "No team assigned";
    string displayFlag = Model.User?.TeamFlag ?? Url.Content("~/images/default-flag.png");
    double? displayRating = Model.User?.TeamRating;
    int displayPlayersCount = Model.User?.Squad?.Count ?? 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    :root {
        --caf-green: #126035;
        --caf-gold: #f3c24b;
        --bg-dark: #062f22;
        --muted: #6c757d;
        --card-radius: 10px;
        --shadow: 0 10px 26px rgba(2,10,6,0.09);
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    .container-wrap {
        padding: 26px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* layout */
    .row-grid {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 18px;
        align-items: start;
    }

    /* overview card */
    .overview {
        background: #fff;
        border-radius: var(--card-radius);
        padding: 14px;
        box-shadow: var(--shadow);
        border: 1px solid rgba(0,0,0,0.04);
        display: flex;
        gap: 14px;
        align-items: center;
    }

    .flag {
        width: 88px;
        height: 56px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid rgba(0,0,0,0.06);
    }

    .team-info h4 {
        margin: 0;
        font-weight: 800;
    }

    .team-info .meta {
        color: var(--muted);
        margin-top: 6px;
    }

    /* stats */
    .stats {
        display: flex;
        gap: 12px;
        margin-top: 12px;
        flex-wrap: wrap;
    }

    .stat {
        background: #fff;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid rgba(0,0,0,0.04);
        min-width: 140px;
        box-shadow: 0 6px 16px rgba(2,10,6,0.04);
    }

        .stat .label {
            color: var(--muted);
            font-size: 0.88rem;
        }

        .stat .value {
            font-weight: 800;
            font-size: 1.05rem;
            margin-top: 6px;
            color: var(--bg-dark);
        }

    /* profile card */
    .card-profile {
        background: #fff;
        border-radius: var(--card-radius);
        padding: 14px;
        box-shadow: var(--shadow);
        border: 1px solid rgba(0,0,0,0.04);
    }

    .card-actions {
        margin-top: 12px;
        display: flex;
        gap: 8px;
    }

    /* responsive */
    @@media (max-width: 991.98px) {
        .row-grid

    {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="container-wrap" role="main" aria-labelledby="dashboardTitle">
    <div class="row-grid">

        <!-- left: menu partial, unchanged -->
        <aside>
            @await Html.PartialAsync("_RepMenu")
        </aside>

        <!-- right: main content -->
        <main>
            <h2 id="dashboardTitle">Welcome, @Model.User?.FullName</h2>
            <p style="color:var(--muted); margin-top:6px;">Representative dashboard</p>

            <!-- overview -->
            <div class="overview" role="region" aria-label="Team overview">
                <img src="@displayFlag" alt="@displayTeamName flag" class="flag" />
                <div class="team-info">
                    <h4>@displayTeamName</h4>
                    

                    <div class="stats" aria-hidden="false">
                        <div class="stat" role="status">
                            <div class="label">Team rating</div>
                            <div class="value">@(displayRating.HasValue? displayRating.Value.ToString("F1") : "-")</div>
                        </div>

                        <div class="stat" role="status">
                            <div class="label">Players</div>
                            <div class="value">@displayPlayersCount</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- profile -->
            <div class="card-profile" style="margin-top:16px;">
                <h5 style="margin-top:0;">Profile</h5>

                <div style="margin-top:8px;">
                    <p><strong>Name:</strong> @Model.User?.FullName</p>
                    <p><strong>Email:</strong> @Model.User?.Email</p>
                    <p><strong>Phone:</strong> @Model.User?.PhoneNumber</p>
                    <p><strong>Manager:</strong> @Model.User?.ManagerName</p>
                    <p><strong>Team selected:</strong> @(Model.User?.TeamName ?? "<em>No team selected</em>")</p>
                </div>

                <div class="card-actions">
                    <a asp-controller="Representative" asp-action="Profile" class="btn btn-outline-primary">Edit profile</a>
                    <a asp-controller="Representative" asp-action="Teams" class="btn btn-secondary">View all teams</a>
                </div>
            </div>

        </main>
    </div>
</div>