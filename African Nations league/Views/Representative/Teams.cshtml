@model List<African_Nations_league.Models.TeamViewModel>
@{
    ViewData["Title"] = "Teams";
}

<h2>Teams</h2>

<table class="table">
    <thead>
        <tr><th>Flag</th><th>Name</th><th>Rating</th><th>Players</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>
                    <img src="@t.TeamFlag" alt="@t.TeamName" style="width:60px;height:40px" />
                </td>
                <td>@t.TeamName</td>
                <td>@t.TeamRating.ToString("F1")</td>
                <td>@(t.Squad?.Count ?? 0)</td>
                <td>
                    <!-- on passe TeamId dans route, ça fonctionne pour Teams et Users -->
                    <a asp-controller="Representative"
                       asp-action="TeamDetails"
                       asp-route-id="@t.TeamId"
                       class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
