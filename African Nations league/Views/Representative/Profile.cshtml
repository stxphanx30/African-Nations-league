@model African_Nations_league.Controllers.RepresentativeProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    :root {
        --caf-green: #126035;
        --caf-gold: #f3c24b;
        --bg-dark: #062f22;
        --muted: #6c757d;
        --card-radius: 10px;
        --shadow: 0 10px 26px rgba(2,10,6,0.08);
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    /* page layout */
    .profile-page {
        padding: 22px;
        min-height: 100vh;
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.00));
    }

    /* grid: left menu + main content */
    .profile-grid {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 18px;
        max-width: 1180px;
        margin: 0 auto;
    }

    /* header card */
    .header-card {
        background: #fff;
        border-radius: var(--card-radius);
        padding: 14px;
        box-shadow: var(--shadow);
        border: 1px solid rgba(0,0,0,0.04);
        display: flex;
        gap: 14px;
        align-items: center;
    }

    /* flag */
    .profile-flag {
        width: 110px;
        height: 64px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid rgba(0,0,0,0.06);
        flex-shrink: 0;
    }

    /* profile meta */
    .profile-meta h4 {
        margin: 0;
        font-weight: 800;
        color: var(--bg-dark);
    }

    .profile-meta .meta {
        color: var(--muted);
        margin-top: 6px;
    }

    /* actions */
    .profile-actions {
        margin-left: auto;
        display: flex;
        gap: 8px;
        align-items: center;
    }

    /* squad grid (cards) */
    .squad-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
        margin-top: 12px;
    }

    .squad-card {
        background: #fff;
        border-radius: 10px;
        padding: 12px 10px;
        text-align: center;
        box-shadow: 0 8px 18px rgba(2,10,6,0.04);
        border: 1px solid rgba(0,0,0,0.04);
        transition: transform .14s ease, box-shadow .14s ease;
        cursor: pointer;
    }

        .squad-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 36px rgba(2,10,6,0.12);
        }

        .squad-card img {
            width: 84px;
            height: 84px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            border: 1px solid rgba(0,0,0,0.06);
        }

        .squad-card .name {
            font-weight: 800;
            margin-bottom: 4px;
            font-size: 0.98rem;
        }

        .squad-card .pos {
            color: var(--muted);
            font-size: 0.92rem;
            margin-bottom: 6px;
        }

        .squad-card .rating {
            font-weight: 700;
            color: var(--caf-green);
        }

    /* fallback / empty */
    .empty-note {
        padding: 18px;
        background: #fff;
        border-radius: 10px;
        border: 1px dashed rgba(0,0,0,0.04);
        color: var(--muted);
        text-align: center;
    }

    /* small utility */
    .mb-12 {
        margin-bottom: 12px;
    }

    /* responsive */
    @@media (max-width: 991.98px) {
        .profile-grid {
            grid-template-columns: 1fr;
            padding: 12px;
        }

        .squad-grid {
            grid-template-columns: repeat(2,1fr);
        }

        .profile-flag {
            width: 90px;
            height: 56px;
        }
    }

    @@media (max-width: 480px) {
        .squad-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="profile-page" role="main" aria-labelledby="profileTitle">
    <div class="profile-grid">

        <!-- LEFT: menu partial (unchanged) -->
        <aside>
            @await Html.PartialAsync("_RepMenu")
        </aside>

        <!-- RIGHT: main content -->
        <section>

            <h2 id="profileTitle" class="mb-12">Profile</h2>

            <div class="header-card mb-12" role="region" aria-label="Profile header">
                @{
                    var flag = Model.User?.TeamFlag ?? "";
                    var teamName = Model.User?.TeamName ?? "No team";
                    var teamRating = Model.User?.TeamRating;
                }
                <img src="@flag" alt="@teamName" class="profile-flag" onerror="this.src='/images/placeholder-flag.png';" />

                <div class="profile-meta">
                    <h4>@Model.User.FullName</h4>
                    <div class="meta">
                        <div><strong>Email:</strong> @Model.User.Email</div>
                        <div><strong>Phone:</strong> @Model.User.PhoneNumber</div>
                        <div><strong>Role:</strong> @Model.User.Role</div>
                        <div><strong>Manager:</strong> @Model.User.ManagerName</div>
                        <div><strong>Team:</strong> @teamName</div>
                        <div><strong>Team rating:</strong> @(teamRating.HasValue? teamRating.Value.ToString("F1") : "0")</div>
                    </div>
                </div>

                <div class="profile-actions" aria-hidden="false">
                    <a asp-action="EditProfile" class="btn btn-outline-primary">Edit profile</a>

                    <form asp-action="DeleteProfile" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete your profile?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete account</button>
                    </form>
                </div>
            </div>

            <h4 class="mb-12">Squad</h4>

            @if (Model.User?.Squad != null && Model.User.Squad.Any())
            {
                <div class="squad-grid" role="list" aria-label="Team squad">
                    @foreach (var p in Model.User.Squad)
                    {
                        // use PlayerId if available as modal id, else fallback to a GUID to avoid duplicate IDs
                        var pid = (p.PlayerName ?? Guid.NewGuid().ToString()).ToString();
                        <div class="squad-card" role="listitem" tabindex="0" data-bs-toggle="modal" data-bs-target="#playerModal-@pid" aria-label="@p.PlayerName">
                            <img src="@(string.IsNullOrEmpty(p.ImagePath) ? Url.Content("~/images/placeholder-player.png") : p.ImagePath)" alt="@p.PlayerName" onerror="this.src='/images/placeholder-player.png';" />
                            <div class="name">@p.PlayerName</div>
                            <div class="pos">@p.Position @(!string.IsNullOrEmpty(p.DetailedPosition) ? "(" + p.DetailedPosition + ")" : "")</div>
                            <div class="rating">Rating: @p.Rating</div>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="playerModal-@pid" tabindex="-1" aria-labelledby="playerModalLabel-@pid" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="playerModalLabel-@pid">@p.PlayerName</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="d-flex gap-3 align-items-start">
                                            <img src="@(string.IsNullOrEmpty(p.ImagePath) ? Url.Content("~/images/placeholder-player.png") : p.ImagePath)" alt="@p.PlayerName" style="width:120px;height:120px;object-fit:cover;border-radius:8px;border:1px solid rgba(0,0,0,0.06);" onerror="this.src='/images/placeholder-player.png';" />
                                            <div>
                                                <p><strong>Position:</strong> @p.Position</p>
                                                <p><strong>Detailed position:</strong> @p.DetailedPosition</p>
                                                <p><strong>Rating:</strong> @p.Rating</p>
                                                @* Keep fields as-is; if you have more properties (club, dob...) they can be added here. *@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                                        @* If you have a Player Details route, you can uncomment and use it:
                                           <a asp-controller="Players" asp-action="Details" asp-route-id="@p.PlayerId" class="btn btn-primary btn-sm">View full profile</a>
                                        *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-note">No players found for your team yet.</div>
            }

        </section>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>