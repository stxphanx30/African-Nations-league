@{
    Layout = null; // no layout for full-screen splash
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Loading...</title>
    <style>
        body, html {
            margin: 0;
            height: 100%;
            overflow: hidden;
        }
        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <video id="loadingVideo" autoplay muted>
        <source src="~/videos/African League Of nation Landing screen.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>

    <script>
        const video = document.getElementById("loadingVideo");
        video.addEventListener("ended", () => {
            window.location.href = '@Url.Action("Index", "Home")';
        });
    </script>
</body>
</html>
