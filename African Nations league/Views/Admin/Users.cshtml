@model List<African_Nations_league.Models.User>
@{
    ViewData["Title"] = "Users";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    :root {
        --caf-green: #126035;
        --muted: #6c757d;
        --bg: #fbfcfb;
        --card: #ffffff;
        --radius: 12px;
        --shadow: 0 12px 30px rgba(12,20,30,0.06);
    }

    html, body {
        height: 100%;
        margin: 0;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial;
        background: linear-gradient(180deg,#fbfdfb,#f7faf7);
        color: #222;
    }

    .users-wrap {
        max-width: 1200px;
        margin: 18px auto;
        padding: 16px;
    }

    .grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 18px;
        align-items: start;
    }

    .panel {
        background: var(--card);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 16px;
        border: 1px solid rgba(0,0,0,0.04);
    }

    .users-hero {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 12px;
    }

        .users-hero h1 {
            margin: 0;
            font-size: 1.1rem;
            color: var(--caf-green);
            font-weight: 800;
        }

    .small-muted {
        color: var(--muted);
        font-size: 0.92rem;
    }

    .toolbar {
        display: flex;
        gap: 10px;
        align-items: center;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .search {
        flex: 1 1 220px;
        min-width: 160px;
    }

    /* Desktop table */
    .users-table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
        background: transparent;
    }

        .users-table thead th {
            text-align: left;
            font-weight: 800;
            color: var(--caf-green);
            padding: 10px 12px;
            font-size: 0.95rem;
            border-bottom: none;
        }

        .users-table tbody tr {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 18px rgba(12,20,30,0.03);
            transition: transform .12s ease, box-shadow .12s ease;
            display: table;
            width: 100%;
            table-layout: fixed;
            margin-bottom: 10px;
        }

            .users-table tbody tr:hover {
                transform: translateY(-4px);
                box-shadow: 0 18px 36px rgba(12,20,30,0.06);
            }

        .users-table td {
            padding: 14px 12px;
            vertical-align: middle;
            font-size: 0.95rem;
            border: none;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .name-cell {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .avatar {
        width: 56px;
        height: 56px;
        border-radius: 8px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 800;
        background: linear-gradient(90deg,var(--caf-green), #0f7a4d);
    }

    .role-pill {
        display: inline-block;
        font-weight: 700;
        padding: 6px 10px;
        border-radius: 999px;
        background: #fff;
        border: 1px solid rgba(0,0,0,0.04);
    }

    td.actions {
        text-align: right;
        width: 120px;
    }

    /* Mobile cards */
    .cards-list {
        display: none;
        gap: 12px;
    }

    .user-card {
        display: flex;
        gap: 12px;
        align-items: center;
        padding: 12px;
        border-radius: 12px;
        background: var(--card);
        box-shadow: var(--shadow);
        border: 1px solid rgba(0,0,0,0.04);
    }

    .user-avatar {
        width: 64px;
        height: 64px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 800;
        background: linear-gradient(90deg,var(--caf-green), #0f7a4d);
        flex-shrink: 0;
    }

    .user-meta {
        flex: 1;
        min-width: 0;
    }

        .user-meta .name {
            font-weight: 800;
        }

        .user-meta .email {
            color: var(--muted);
            font-size: 0.92rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .user-actions {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-end;
    }

    .empty-state {
        padding: 18px;
        border-radius: 10px;
        background: linear-gradient(180deg,#fff,#fbfbfb);
        border: 1px dashed rgba(18,96,53,0.06);
        color: var(--muted);
        text-align: center;
    }

    /* Responsive rules */
    @@media (max-width: 991.98px) {
        .grid {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
    }

    @@media (max-width: 767.98px) {
        .users-table {
            display: none;
        }

        .cards-list {
            display: grid;
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .avatar {
            width: 64px;
            height: 64px;
        }

        .user-avatar {
            width: 64px;
            height: 64px;
        }

        td {
            font-size: 0.92rem;
        }
    }

    /* make the table rows not collapse spacing in some browsers */
    tbody {
        display: block;
    }

        thead, tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }

    table.users-table {
        display: table;
    }
</style>

<div class="users-wrap" role="main" aria-labelledby="usersTitle">
    <div class="grid">
        <!-- left menu -->
        <aside class="panel" aria-label="Admin menu">
            @await Html.PartialAsync("_AdminMenu")
        </aside>

        <!-- main -->
        <section class="panel" aria-labelledby="usersTitle">
            <div class="users-hero">
                <div>
                    <h1 id="usersTitle">Users</h1>
                    <div class="small-muted">Manage registered users and their team links</div>
                </div>
                <div aria-hidden="true"></div>
            </div>

            <div class="toolbar">
                <input id="userSearch" class="form-control search" placeholder="Search users by name or email..." aria-label="Search users" />
                <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('userSearch').value=''; filterUsers();">Clear</button>
            </div>

            @if (Model == null || Model.Count == 0)
            {
                <div class="empty-state">No users found.</div>
            }
            else
            {
                <!-- desktop table -->
                <div class="table-responsive" style="margin-bottom:10px;">
                    <table class="users-table" role="table" aria-label="Users table">
                        <thead>
                            <tr>
                                <th style="width:28%;">Name</th>
                                <th style="width:32%;">Email</th>
                                <th style="width:18%;">Role</th>
                                <th style="width:18%;">Team</th>
                                <th style="width:12%;"></th>
                            </tr>
                        </thead>

                        <tbody id="usersTbody">
                            @foreach (var u in Model)
                            {
                                <tr data-name="@((u.FullName ?? "").ToLower())" data-email="@((u.Email ?? "").ToLower())">
                                    <td>
                                        <div class="name-cell">
                                            <div class="avatar">@(!string.IsNullOrEmpty(u.FullName) ? u.FullName.Substring(0, 1).ToUpper() : "U")</div>
                                            <div style="min-width:0;">
                                                <div style="font-weight:800; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@u.FullName</div>
                                                <div class="small-muted" style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@u.Email</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@u.Email</td>

                                    <td>
                                        <span class="role-pill">@u.Role</span>
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(u.TeamName))
                                        {
                                            <div style="font-weight:700;color:var(--caf-green);overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@u.TeamName</div>
                                        }
                                        else
                                        {
                                            <div class="small-muted">No team</div>
                                        }
                                    </td>

                                    <td class="actions">
                                        <!-- Edit removed as requested -->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- mobile cards -->
                <div class="cards-list" id="usersCards" aria-hidden="false">
                    @foreach (var u in Model)
                    {
                        <div class="user-card" data-name="@((u.FullName ?? "").ToLower())" data-email="@((u.Email ?? "").ToLower())">
                            <div class="user-avatar">@(!string.IsNullOrEmpty(u.FullName) ? u.FullName.Substring(0, 1).ToUpper() : "U")</div>
                            <div class="user-meta">
                                <div class="name">@u.FullName</div>
                                <div class="email">@u.Email</div>
                                <div style="margin-top:6px;" class="small-muted"><strong>Team:</strong> @(string.IsNullOrEmpty(u.TeamName) ? "No team" : u.TeamName)</div>
                            </div>

                            <div class="user-actions">
                                <div class="role-pill" style="margin-bottom:6px;">@u.Role</div>
                                <!-- Edit removed as requested -->
                            </div>
                        </div>
                    }
                </div>
            }
        </section>
    </div>
</div>

<script>
    function filterUsers(){
      const q = (document.getElementById('userSearch').value || '').trim().toLowerCase();

      document.querySelectorAll('#usersTbody tr').forEach(tr=>{
        const name = tr.getAttribute('data-name') || '';
        const email = tr.getAttribute('data-email') || '';
        tr.style.display = (!q || name.includes(q) || email.includes(q)) ? '' : 'none';
      });

      document.querySelectorAll('#usersCards .user-card').forEach(card=>{
        const name = card.getAttribute('data-name') || '';
        const email = card.getAttribute('data-email') || '';
        card.style.display = (!q || name.includes(q) || email.includes(q)) ? '' : 'none';
      });
    }

    document.getElementById('userSearch').addEventListener('input', filterUsers);
</script>