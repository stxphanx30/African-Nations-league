@model African_Nations_league.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;

    // prefer a FullName claim, fall back to identity name, then model property then "Admin"
    var signedInName = User?.FindFirst("FullName")?.Value
                       ?? User?.Identity?.Name   ;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    :root {
        --caf-green: #126035;
        --caf-gold: #f1c232;
        --muted: #6c757d;
        --bg: #fbfcfb;
        --card-bg: #fff;
        --radius: 12px;
        --shadow: 0 12px 36px rgba(12,20,30,0.06);
    }

    body {
        background: linear-gradient(180deg, #fbfdfb, #f7faf7);
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: #222;
        margin: 0;
        padding: 20px;
    }

    .dashboard-wrap {
        max-width: 1200px;
        margin: 0 auto;
    }

    .grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 18px;
        align-items: start;
    }

    .panel {
        background: var(--card-bg);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 18px;
        border: 1px solid rgba(0,0,0,0.04);
    }

    .dashboard-hero {
        display: flex;
        gap: 14px;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
    }

        .dashboard-hero h1 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 900;
            color: var(--caf-green);
        }

    .stats {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 12px;
    }

    .stat {
        background: linear-gradient(180deg,#ffffff,#fffdf8);
        padding: 12px 14px;
        border-radius: 10px;
        min-width: 140px;
        border: 1px solid rgba(0,0,0,0.04);
        box-shadow: 0 8px 18px rgba(12,20,30,0.03);
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

        .stat .value {
            font-weight: 900;
            color: var(--caf-green);
            font-size: 1.18rem;
        }

    .actions-row {
        margin-top: 16px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        align-items: center;
    }

    .btn-primary {
        background: linear-gradient(90deg, var(--caf-green), #0f7a4d);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 10px 14px;
        font-weight: 800;
    }

    .btn-outline {
        background: transparent;
        border: 1px solid rgba(18,96,53,0.12);
        color: var(--caf-green);
        border-radius: 10px;
        padding: 10px 12px;
        font-weight: 700;
    }

    .quick-links {
        margin-top: 18px;
    }

    a.quick-link {
        display: inline-block;
        margin-right: 12px;
        color: var(--caf-green);
        font-weight: 700;
        text-decoration: none;
    }

    .muted {
        color: var(--muted);
    }

    /* Responsive: switch to column flex on small screens so 'order' works */
   @@media (max-width: 991.98px) {
        .grid

    {
        display: flex;
        flex-direction: column;
        gap: 18px;
        /* ensure width / alignment like before */
        align-items: stretch;
    }

    /* make main content appear first, menu below */
    .panel.main {
        order: 2;
    }

    .panel.aside {
        order: 1;
    }

    /* tweak spacing/paddings for smaller screens */
    .panel {
        padding: 12px;
    }

    .dashboard-wrap {
        padding: 12px;
    }

    }
</style>

<div class="dashboard-wrap" role="main" aria-labelledby="adminTitle">
    <div class="grid">

        <!-- LEFT: admin menu partial -->
        <aside class="panel aside" aria-label="Admin menu">
            @await Html.PartialAsync("_AdminMenu")
        </aside>

        <!-- RIGHT: main -->
        <section class="panel main" aria-labelledby="adminTitle">
            <div class="dashboard-hero">
                <h1 id="adminTitle">Admin Dashboard</h1>

                <div style="text-align:right;">
                    <div class="muted" style="font-size:0.9rem">Signed in</div>
                    <div style="font-weight:800">@signedInName</div>
                </div>
            </div>

            <p class="muted">Overview of current data and quick admin actions.</p>

            <div class="stats" role="list" aria-label="Statistics">
                <div class="stat" role="listitem" aria-label="Teams count">
                    <div class="label muted">Teams</div>
                    <div class="value">@Model.TeamsCount</div>
                    <div class="muted" style="font-size:0.85rem">Total teams in system</div>
                </div>

                <div class="stat" role="listitem" aria-label="Users count">
                    <div class="label muted">Users</div>
                    <div class="value">@Model.UsersCount</div>
                    <div class="muted" style="font-size:0.85rem">Registered users</div>
                </div>

            </div>

            <div class="actions-row">
                <form asp-action="Seed" asp-controller="Admin" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-primary" title="Seed database (insert/update)">Run Seed</button>
                </form>

                @if (TempData["SeedMessage"] != null)
                {
                    <div style="display:flex;align-items:center;gap:8px;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path d="M20 6L9 17l-5-5" stroke="#2e7d32" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div style="color:#2e7d32;font-weight:700;">@TempData["SeedMessage"]</div>
                    </div>
                }

                <a asp-controller="Admin" asp-action="Teams" class="btn-outline">View teams</a>
                <a asp-controller="Admin" asp-action="Users" class="btn-outline">View users</a>
            </div>

            <hr style="margin:18px 0;border:none;border-top:1px dashed rgba(0,0,0,0.06)" />

            <div class="quick-links">
                <h3 style="margin:0 0 8px 0;color:var(--caf-green)">Quick links</h3>
                <a asp-controller="Admin" asp-action="Teams" class="quick-link">Teams</a>
                <a asp-controller="Admin" asp-action="Users" class="quick-link">Users</a>
                <a asp-controller="Admin" asp-action="GenerateFixtures" class="quick-link">Generate Fixtures</a>
                <a asp-controller="Admin" asp-action="Bracket" class="quick-link">Brackets</a>
                <a asp-controller="Admin" asp-action="TopScorers" class="quick-link">Leaderboard</a>
            </div>
        </section>
    </div>
</div>