@model List<African_Nations_league.Models.Fixture>
@{
    ViewData["Title"] = "Fixtures";
}

<style>
    .disabled-link {
        pointer-events: none;
        opacity: 0.5;
        cursor: default;
    }
</style>

<h2>Fixtures</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Team A</th>
            <th>Score</th>
            <th>Team B</th>
            <th>Status</th>
            <th>Events</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.TeamAName</td>
                <td>@f.ScoreA - @f.ScoreB</td>
                <td>@f.TeamBName</td>
                <td>@f.Status</td>
                <td>
                    @if (f.Events != null && f.Events.Count > 0)
                    {
                        <ul style="list-style:none;padding-left:0;margin-bottom:0;">
                            @foreach (var e in f.Events.OrderBy(ev => ev.Minute))
                            {
                                <li>@($"{e.Minute}' - {e.PlayerName} ({e.TeamName})")</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>—</span>
                    }
                </td>
                <td>
                    <a asp-action="SimulateMatch" asp-route-fixtureId="@f.Id"
                       class="btn btn-sm btn-primary @(ViewBag.CanSimulate ? "" : "disabled-link")">Simulate</a>

                    <a asp-action="PlayMatch" asp-route-id="@f.Id"
                       class="btn btn-sm btn-success @(ViewBag.CanSimulate ? "" : "disabled-link")">Play</a>
                </td>
            </tr>
        }

        @* Afficher les placeholders Team Waiting *@
        @{
            int totalTeamsNeeded = 8;
            int currentTeams = Model.SelectMany(f => new[] { f.TeamAId, f.TeamBId }).Distinct().Count();
            int waitingSlots = totalTeamsNeeded - currentTeams;
        }

        @for (int i = 0; i < waitingSlots; i += 2)
        {
            <tr>
                <td>Team @((currentTeams + i) + 1) Waiting</td>
                <td>-</td>
                <td>Team @((currentTeams + i) + 2) Waiting</td>
                <td>Waiting</td>
                <td>-</td>
                <td>-</td>
            </tr>
        }
    </tbody>
</table>

@if (!(bool)ViewBag.CanSimulate)
{
    <p class="text-warning">Waiting for all 8 teams to be added before matches can be played or simulated.</p>
}
