@model List<African_Nations_league.Models.TeamViewModel>
@{
    ViewData["Title"] = "Teams";
}

        <h2>All Teams</h2>

        @if (Model == null || Model.Count == 0)
        {
            <p>Aucune équipe trouvée.</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Flag</th>
                        <th>Team</th>
                        <th>Code</th>
                        <th>Rating</th>
                        <th>Players</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(t.TeamFlag))
                                {
                                    <img src="@t.TeamFlag" alt="@t.TeamName" width="50" height="35" />
                                }
                            </td>
                            <td>@t.TeamName</td>
                            <td>@t.TeamRating.ToString("0.0")</td>
                            <td>@(t.Squad?.Count ?? 0)</td>
                            <td>
                                <a asp-controller="Teams"
                                   asp-action="TeamDetails"
                                   asp-route-id="@t.TeamId"
                                   class="btn btn-sm btn-outline-primary">
                                    Détails
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
   
